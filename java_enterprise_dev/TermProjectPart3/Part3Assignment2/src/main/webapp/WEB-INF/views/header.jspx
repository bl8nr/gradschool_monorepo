<div id="header" xmlns:jsp="http://java.sun.com/JSP/Page"
     xmlns:spring="http://www.springframework.org/tags"
     xmlns:sec="http://www.springframework.org/security/tags"
     version="2.0">
    <jsp:directive.page contentType="text/html;charset=UTF-8" />
    <jsp:output omit-xml-declaration="yes" />

    <!-- add spring messaging for i18n -->
    <spring:message code="navbar_title" var="navbarTitle"/>
    <spring:message code="label_logout" var="labelLogout"/>
    <spring:message code="label_welcome" var="labelWelcome"/>

    <!-- add spring url for home page -->
    <spring:url value="/books" var="homeUrl"/>
    <spring:url var="logoutUrl" value="/logout" />

    <!-- create navbar whose title links to the homepage -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="${homeUrl}">${navbarTitle}</a>
        <ul class="navbar-nav mr-auto">
            <!-- empty -->
        </ul>
        <span class="navbar-text">
            <sec:authorize access="isAuthenticated()">${labelWelcome}
                <sec:authentication property="principal.username" />
                <a class="px-3" href="${logoutUrl}">${labelLogout}</a>
            </sec:authorize>
        </span>
    </nav>
</div>