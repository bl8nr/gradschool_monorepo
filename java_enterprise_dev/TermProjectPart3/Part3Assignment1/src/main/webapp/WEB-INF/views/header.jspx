<div id="header" xmlns:jsp="http://java.sun.com/JSP/Page"
     xmlns:spring="http://www.springframework.org/tags"
     version="2.0">
    <jsp:directive.page contentType="text/html;charset=UTF-8" />
    <jsp:output omit-xml-declaration="yes" />

    <!-- add spring messaging for i18n -->
    <spring:message code="navbar_title" var="navbarTitle"/>

    <!-- add spring url for home page -->
    <spring:url value="/books" var="homeUrl"/>

    <!-- create navbar whose title links to the homepage -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="${homeUrl}">${navbarTitle}</a>
    </nav>
</div>